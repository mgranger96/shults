<h1>Ed Shults Chevy Summary Report</h1>

<%if user_signed_in? %>

<table class="table table-striped">
  <tr>
    <th>Deal number</th>
    <th>Last name</th>
    <th>Selection</th>
    <th>Amount</th>
  </tr>

<% @updates.each do |update| %>
  <tr>
    <td><%= update.deal_number %></td>
    <td><%= update.last_name %></td>
    <td><%= update.selection %></td>
    <td>$<%= update.amout %>.00</td>
    <td><%= update.total %></td>
    <td><%= link_to 'Show', update %></td>
    <td><%= link_to 'Edit', edit_update_path(update) %></td>
    <td><%= link_to 'Destroy', update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<% @@total = 0 %>
<br />
<% @updates.each do |update| %>
    <% @@total = update.amout + @@total %>
<% end %>
Total: $<%= @@total %>.00
<%= link_to 'New Update', new_update_path %>

<% else %>
You are not authorized to view this information. Please <%= link_to "click here to sign in", new_user_session_path %>.
<% end %>
